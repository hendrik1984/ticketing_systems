<%= form_with model: event, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :banner_image %>
    <%= form.file_field :banner_image %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, ['active', 'inactive'], selected: @event.status || 'inactive' %>
  </div>

  <div>
    <%= form.label :max_allocation %>
    <%= form.number_field :max_allocation %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>